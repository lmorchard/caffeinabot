{
  "name": "caffeinabot",
  "version": "0.0.1",
  "description": "a caffeinated bot",
  "author": "Les Orchard <me@lmorchard.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "cross-env NODE_ENV=production npm-run-all --sequential build server",
    "start:dev": "cross-env NODE_ENV=development npm-run-all --parallel server:dev watch",
    "watch:webpack": "cross-env NODE_ENV=development webpack --watch --progress --colors",
    "build": "webpack",
    "server": "node backend/index.js",
    "server:dev": "nodemon backend/dev.js",
    "format": "prettier --write webpack.config.js \"frontend/src/**/*.js\"",
    "test": "npm-run-all --parallel test:*",
    "test:js": "mocha --require lib/test-setup.js --recursive \"{frontend/src,backend}/**/*-test.js\"",
    "lint": "npm-run-all lint:*",
    "lint:css": "stylelint 'frontend/src/**/*.scss'",
    "lint:js": "eslint --color .",
    "watch": "npm-run-all --parallel watch:*",
    "watch:test": "onchange \"{frontend/src,backend}/**/*.js\" -v -i -p -- npm run test",
    "watch:lint": "npm-run-all --parallel watch:lint:*",
    "watch:lint:js": "onchange -p -v \"src/**/*.js\" -- npm run lint:js",
    "watch:lint:css": "onchange -p -v \"src/**/*.scss\" -- npm run lint:css"
  },
  "browserslist": "last 2 versions",
  "nodemonConfig": {
    "verbose": true,
    "ignore": [
      "frontend/*",
      "logs/*",
      "data/*"
    ]
  },
  "dependencies": {
    "@babel/core": "^7.0.0-beta.53",
    "@babel/preset-env": "^7.0.0-beta.53",
    "@babel/preset-react": "^7.0.0-beta.53",
    "@babel/preset-stage-0": "^7.0.0-beta.53",
    "babel-eslint": "^8.2.6",
    "babel-loader": "^8.0.0-beta.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "bunyan-prettystream": "^0.1.3",
    "bunyan": "^1.8.12",
    "chai": "^4.1.2",
    "chalk": "^2.4.1",
    "classnames": "^2.2.6",
    "config": "^1.30.0",
    "copy-webpack-plugin": "^4.5.2",
    "cross-env": "^5.2.0",
    "css-loader": "^1.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-mozilla": "^0.14.0",
    "eslint-plugin-no-unsanitized": "^3.0.2",
    "eslint-plugin-react": "^7.10.0",
    "eslint": "^5.1.0",
    "express": "^4.16.3",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "koa-body": "^4.0.4",
    "koa-router": "^7.4.0",
    "koa-static": "^5.0.0",
    "koa": "^2.5.2",
    "mini-css-extract-plugin": "^0.4.1",
    "mocha": "^5.2.0",
    "nedb-promises": "^3.0.1",
    "nedb": "^1.8.0",
    "node-sass": "^4.9.2",
    "nodemon": "^1.18.2",
    "npm-run-all": "^4.1.3",
    "onchange": "^4.0.0",
    "prettier": "^1.13.7",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react": "^16.4.1",
    "redux-actions": "^2.4.0",
    "redux-devtools-extension": "^2.13.5",
    "redux-undo": "^0.6.1",
    "redux": "^4.0.0",
    "rimraf": "^2.6.2",
    "sass-loader": "^7.0.3",
    "sinon": "^6.1.3",
    "style-loader": "^0.21.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint": "^9.3.0",
    "url-loader": "^1.0.1",
    "uuid": "^3.3.2",
    "webpack-cli": "^3.0.8",
    "webpack-dev-middleware": "^3.1.3",
    "webpack-dev-server": "^3.1.4",
    "webpack-merge": "^4.1.3",
    "webpack-serve": "^2.0.2",
    "webpack": "^4.16.0",
    "ws": "^5.2.2"
  }
}
